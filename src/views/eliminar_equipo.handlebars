<title>Eliminar equipo</title>
<body>
  <h1 class='text-center'>Eliminar equipo</h1>
  {{#if mensaje}}
    <div class='alert alert-primary' role='alert'>
      <p class='text-center'>{{mensaje}}</p>
    </div>
  {{/if}}
  <form action='/equipo/{{equipo.id}}/eliminar' method='POST'>
    <p class='text-center'>¿Estás seguro que quieres eliminar el equipo "{{equipo.name}}"?</p>
    <div class='d-flex justify-content-center'>
      <input
        type='submit'
        class='btn btn-danger boton'
        value='Si, eliminar equipo'
        name='{{equipo.name}}'
      />
    </div>
  </form>
</body>